<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.1.6.RELEASE</version>
    </parent>

    <groupId>no.nav.data</groupId>
    <artifactId>data-catalog-backend</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <modules>
        <module>data-catalog-backend-app</module>
        <module>data-catalog-backend-test</module>
    </modules>

    <properties>
        <start-class>no.nav.data.catalog.backend.app.AppStarter</start-class>
        <junit.version>4.12</junit.version>
        <jwt.version>0.9.1</jwt.version>
        <json.version>20180813</json.version>
        <jaxb.version>2.3.1</jaxb.version>
        <elasticsearch.version>6.4.1</elasticsearch.version>
        <testcontainer.version>1.11.2</testcontainer.version>
        <springfox.version>2.9.2</springfox.version>
        <postgres.version>42.2.5</postgres.version>
        <spring.cloud.wiremock.version>2.1.1.RELEASE</spring.cloud.wiremock.version>
        <jjwt.version>0.10.6</jjwt.version>
        <awaitability.version>3.1.6</awaitability.version>
        <hibernate-types-52.version>2.4.4</hibernate-types-52.version>
        <spring-cloud-dependencies.version>Greenwich.SR2</spring-cloud-dependencies.version>
        <prometheus.version>0.6.0</prometheus.version>
        <org.eclipse.egit.github.core.version>5.4.0.201906121030-r</org.eclipse.egit.github.core.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud-dependencies.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>io.prometheus</groupId>
                <artifactId>simpleclient_common</artifactId>
                <version>${prometheus.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-enforcer-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <dependencyConvergence/>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

	<repositories>
		<repository>
			<id>repo.eclipse.org</id>
			<name>EGit Maven Repository - Releases</name>
			<url>https://repo.eclipse.org/content/repositories/egit-releases/</url>
		</repository>
	</repositories>

</project>