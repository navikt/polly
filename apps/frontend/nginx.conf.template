server {
  listen       8080;
  proxy_http_version 1.1;
  proxy_set_header    Nav-Consumer-Id behandlingskatalog;
  proxy_set_header    X-Real-IP $remote_addr;
  proxy_redirect      off;

  # Favicons are heavily cached by browsers; avoid stale env-specific icons.
  location ~* ^/(favicon\.ico|favicon_.*\.ico)$ {
    add_header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0" always;
    expires -1;
    try_files $uri =404;
  }

  location /isAlive {
    return 200 'OK';
  }

  location /isReady {
    return 200 'OK';
  }

  location / {
    root   /usr/share/nginx/html;
    index  index.html index.htm;
    try_files $uri $uri/ /index.html;
  }

  location /api {
    location /api/internal {
      return 403 'Forbidden';
    }

    rewrite /api/(.*)   /$1   break;
    proxy_set_header    Nav-Consumer-Id behandlingskatalog;
    proxy_redirect      off;

    proxy_pass http://behandlingskatalog-backend;
  }

  location /login {
    proxy_set_header    Nav-Consumer-Id behandlingskatalog;
    proxy_redirect      off;

    proxy_pass http://behandlingskatalog-backend;
  }

  location /oauth2 {
    proxy_set_header    Nav-Consumer-Id teamsfrontend;
    proxy_redirect      off;

    proxy_pass http://behandlingskatalog-backend;
  }

  location /logout {
    proxy_set_header    Nav-Consumer-Id teamsfrontend;
    proxy_redirect      off;

    proxy_pass http://behandlingskatalog-backend;
  }
}
